<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/fragment_upgrading"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical"
        tools:context="computer.benjamin.zotdr0id.ux.UpgradingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUpgrading"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="12dp"
                android:text="@string/upgrade_title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewUpgradingSubtext"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="10dp"
                android:text="@string/upgrade_subtext"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <ProgressBar
                android:id="@+id/progressBarLoading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />


        </LinearLayout>

        <!-- TODO: Update blank fragment layout -->

    </FrameLayout>
</merge>